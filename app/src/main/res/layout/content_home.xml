<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.andorid.proenandroid.delamanoporcolombia.HomeActivity"
    tools:showIn="@layout/app_bar_home">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:columnCount="3"
        android:rowCount="6"
        android:layout_marginTop="5dp"
        android:id="@+id/gridLayout">


        <Space
            android:layout_width="8px"
            android:layout_height="10px"
            android:layout_column="1"
            android:layout_row="0"
            android:visibility="visible" />


        <FrameLayout
            android:layout_width="155dp"
            android:layout_height="154dp"
            android:layout_marginTop="5dp"
            android:layout_column="2"
            android:layout_row="2"
            android:background="@drawable/fontcali"
            android:onClick="onClick"
            android:id="@+id/frag_cali"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_gravity="left|bottom"
                android:alpha=".9"
                android:background="#524e4e"
                android:elegantTextHeight="false"
                android:text="Cali"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffff"
                android:textStyle="italic" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="155dp"
            android:layout_height="154dp"
            android:layout_column="0"
            android:layout_marginTop="5dp"
            android:id="@+id/frag_cart"
            android:layout_row="2"
            android:background="@drawable/fontcartagena"
            android:onClick="onClick">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_gravity="left|bottom"
                android:alpha=".9"
                android:background="#524e4e"
                android:elegantTextHeight="false"
                android:text="Cartagena"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffff"
                android:textStyle="italic" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="155dp"
            android:layout_height="154dp"
            android:layout_column="0"
            android:layout_marginTop="5dp"
            android:layout_row="4"
            android:background="@drawable/fontsantamarta"
            android:onClick="onClick"
            android:id="@+id/frag_santa">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_gravity="left|bottom"
                android:alpha=".9"
                android:background="#524e4e"
                android:elegantTextHeight="false"
                android:text="Santa Marta"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffff"
                android:textStyle="italic" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="155dp"
            android:layout_height="154dp"
            android:layout_column="2"
            android:layout_marginTop="5dp"
            android:layout_row="4"
            android:background="@drawable/fontmanizales"
            android:onClick="onClick"
            android:id="@+id/frag_mani">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_gravity="left|bottom"
                android:alpha=".9"
                android:background="#524e4e"
                android:elegantTextHeight="false"
                android:text="Manizales"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffff"
                android:textStyle="italic" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="155dp"
            android:layout_height="154dp"
            android:layout_column="2"
            android:layout_row="0"
            android:id="@+id/frag_bog"

            android:onClick="onClick"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/gridLayout"
            android:background="@drawable/fontbogota">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_gravity="left|bottom"
                android:alpha=".9"
                android:background="#524e4e"
                android:elegantTextHeight="false"
                android:text="BogotÃ¡"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffff"
                android:textStyle="italic" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frag_med"
            android:layout_width="155dp"
            android:layout_height="154dp"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@drawable/font_medellin"
            android:onClick="onClick">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_gravity="left|bottom"
                android:alpha=".9"
                android:background="#524e4e"
                android:elegantTextHeight="false"
                android:text="Medellin"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffff"
                android:textStyle="italic" />



        </FrameLayout>


    </GridLayout>

</RelativeLayout>
