<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.andorid.proenandroid.delamanoporcolombia.AgentActivity$PlaceholderFragment"
    >

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/section_label"
        android:layout_alignParentStart="true"
        android:id="@+id/frame1"
        >

        <com.github.siyamed.shapeimageview.BubbleImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/paisaje2"
            app:siArrowPosition="right"
            app:siSquare="true"
            android:id="@+id/view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/tvnc1"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/view"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="true" />


        </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Información"
        android:id="@+id/tvnc2"
        android:gravity="right"
        android:layout_below="@+id/frame1"
        android:layout_toEndOf="@+id/section_label"
        android:layout_marginTop="20dp"
        android:textStyle="bold|italic" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Información"
        android:id="@+id/tvnc3"
        android:gravity="right"
        android:layout_below="@+id/tvnc2"
        android:layout_toEndOf="@+id/section_label"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvnc3"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Telefono:"
            android:id="@+id/tvnc4"
            android:gravity="right"
            android:layout_marginTop="20dp"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Direccion:"
            android:id="@+id/tvnc5"
            android:gravity="right"
            android:layout_below="@+id/tvnc4"
            android:layout_marginTop="20dp"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Correo:"
            android:id="@+id/tvnc6"
            android:gravity="right"
            android:layout_below="@+id/tvnc5"
            android:layout_marginTop="20dp"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="tv_tf"
            android:id="@+id/tv_tf"

            android:layout_marginStart="78dp"
            android:layout_alignBottom="@+id/tvnc4"
            android:layout_toEndOf="@+id/tvnc5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="tv_dir"
            android:id="@+id/tv_dir"
            android:layout_alignBaseline="@+id/tvnc5"
            android:layout_alignBottom="@+id/tvnc5"
            android:layout_alignStart="@+id/tv_tf" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="tv_corr"
            android:id="@+id/tv_corr"
            android:layout_alignBottom="@+id/tvnc6"
            android:layout_alignStart="@+id/tv_dir"
            android:layout_alignParentEnd="false" />
    </RelativeLayout>

</RelativeLayout>
